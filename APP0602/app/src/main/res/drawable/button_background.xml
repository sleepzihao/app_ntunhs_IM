<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D32F2F" /> <!-- 按下时的颜色 -->
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="#B71C1C" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#FFCDD2"
                android:endColor="#8473E5" /> <!-- 正常状态下的渐变色 -->
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="#D32F2F" />
        </shape>
    </item>
</selector>
