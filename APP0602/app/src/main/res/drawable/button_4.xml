<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF9800" /> <!-- 按下时的颜色 -->
            <corners android:radius="25dp" />
            <stroke android:width="3dp" android:color="#F57C00" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFC107" /> <!-- 正常状态下的颜色 -->
            <corners android:radius="25dp" />
            <stroke android:width="3dp" android:color="#FFA000" />
        </shape>
    </item>
</selector>
